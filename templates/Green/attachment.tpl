[allow-download]
	<div class="attachment">
		[allow-online]<a href="{online-view-link}" target="_blank">Посмотреть файл онлайн: {name}</a>[/allow-online]
		<a href="{link}" title="{name}"><svg class="icon icon-file"><use xlink:href="#icon-file"></use></svg><b>{name}</b> [count] [{size}] (cкачиваний: {count})[/count]</a>
	</div>
[/allow-download]
[not-allow-download]
	<span class="attachment">У вас нет доступа!</span>
[/not-allow-download]